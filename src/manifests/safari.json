{
  "manifest_version": 2,
  "name": "ai blocker",
  "version": "1.0",
  "description": "customizable ai blocking",
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-light-16.png",
      "32": "icons/icon-light-32.png",
      "48": "icons/icon-light-48.png",
      "128": "icons/icon-light-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-light-16.png",
    "32": "icons/icon-light-32.png",
    "48": "icons/icon-light-48.png",
    "128": "icons/icon-light-128.png"
  },
  "web_accessible_resources": [
    "blocked-words.txt"
  ]
}
