{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "noEmit": true,
    "types": ["firefox-webext-browser"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
